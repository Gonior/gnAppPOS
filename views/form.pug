extends mainLayout

block content
    - data = data || {}
    if errors
        ul.my-errors
            for error in errors
                li= error.msg
    form.form-registration(action="." method="POST")
        label(for="name") Name : 
        input#name.form-control(type="text", name="name", value=data.name)

        label(for="email") Email :
        input#email.form-control(type="email", name="email", value = data.email)

        input(type="submit", value="Submit", class="btn btn-lg btn-primary btn-block")